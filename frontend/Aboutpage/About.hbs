    <!-- Floating Sign In Button -->
    <button
      class="btn btn-primary floating-auth-btn d-lg-none"
      data-bs-toggle="modal"
      data-bs-target="#authModal"
    >
      <i class="bi bi-person-plus"></i>
    </button>

    <!-- Auth Modal -->
    <div class="modal fade" id="authModal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header border-0">
            <ul
              class="nav nav-tabs flex-fill border-0"
              id="authTabs"
              role="tablist"
            >
              <li class="nav-item flex-fill" role="presentation">
                <button
                  class="nav-link active w-100"
                  id="signin-tab"
                  data-bs-toggle="tab"
                  data-bs-target="#signin"
                  type="button"
                >Sign In</button>
              </li>
              <li class="nav-item flex-fill" role="presentation">
                <button
                  class="nav-link w-100"
                  id="signup-tab"
                  data-bs-toggle="tab"
                  data-bs-target="#signup"
                  type="button"
                >Sign Up</button>
              </li>
            </ul>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>
          <div class="modal-body">
            <div class="tab-content" id="authTabContent">
              <!-- Sign In Tab -->
              <div class="tab-pane fade show active" id="signin">
                <form id="signinForm">
                  <div class="mb-3">
                    <label for="signinEmail" class="form-label">Email</label>
                    <input
                      type="email"
                      class="form-control"
                      id="signinEmail"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="signinPassword"
                      class="form-label"
                    >Password</label>
                    <div class="input-group">
                      <input
                        type="password"
                        class="form-control"
                        id="signinPassword"
                        required
                      />
                      <button
                        class="btn btn-outline-secondary password-toggle"
                        type="button"
                      >
                        <i class="bi bi-eye"></i>
                      </button>
                    </div>
                  </div>
                  <button type="submit" class="btn btn-primary w-100">Sign In</button>
                </form>
              </div>
              <!-- Sign Up Tab -->
              <div class="tab-pane fade" id="signup">
                <form id="signupForm">
                  <div class="mb-3">
                    <label for="signupName" class="form-label">Full Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="signupName"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label for="signupEmail" class="form-label">Email</label>
                    <input
                      type="email"
                      class="form-control"
                      id="signupEmail"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label
                      for="signupPassword"
                      class="form-label"
                    >Password</label>
                    <div class="input-group">
                      <input
                        type="password"
                        class="form-control"
                        id="signupPassword"
                        required
                      />
                      <button
                        class="btn btn-outline-secondary password-toggle"
                        type="button"
                      >
                        <i class="bi bi-eye"></i>
                      </button>
                    </div>
                  </div>
                  <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

